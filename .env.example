# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/typing-platform
# For MongoDB Atlas (Cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/typing-platform

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration (Production)
CORS_ORIGIN=*
# For production, set specific origins:
# CORS_ORIGIN=https://yourdomain.com

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CREATE_COMP_LIMIT=5

# Logging Level
LOG_LEVEL=debug
# Options: error, warn, info, http, verbose, debug, silly
